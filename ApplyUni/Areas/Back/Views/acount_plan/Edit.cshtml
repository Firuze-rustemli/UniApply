                @Html.TextAreaFor(model => model.descriptin, 10, 100, new { @class = "ckeditor" })
                @Html.ValidationMessageFor(model => model.descriptin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-gradient waves-light waves-effect w-md">Save</button>
            </div>
        </div>
    </div>
}

<div>
