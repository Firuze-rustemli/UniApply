@model ApplyUni.Models.post_galery

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Back/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="margin-top:60px;">Delete</h2>
<h3 style="color:#f36270;">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal" style="margin-left: 20px;">
        <dt>
         Title
        </dt>

        <dd>
            @Html.DisplayFor(model => model.title)
        </dd>

        <dt>
            <img src="~/Uploads/@Html.DisplayFor(model => model.photo)" width="100" />
        </dt>

        <dt>
           Description
        </dt>

        <dd>
            @*<![CDATA[@Html.DisplayFor(model => model.description)]]>*@
                @Html.DisplayFor(model => model.description)
</dd>

        <dt>
          Type blog name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type_blog.name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit" class="btn btn-danger waves-light waves-effect w-md">Delete</button> | |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
