@model IEnumerable<ApplyUni.Models.Uni_detail>

@{
    ViewBag.Title = "University Detail";
    Layout = "~/Areas/Back/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>University Detail</h2>
<p>
    @Html.ActionLink("Create New", "Create", "uni_detail", null, new { @class = "btn btn-gradient waves-light waves-effect w-md" })
</p>
<div class="card-box table-responsive">
    <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.average_tution)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.accept_rate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.scholorship)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.student_fac_retio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.information)
                </th>
                <th></th>
            </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.average_tution)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.accept_rate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.scholorship)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.student_fac_retio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.information)
                    </td>
                    <td>
                        <button class="btn-outline-** btn btn-light waves-effect w-md">
                            @Html.ActionLink("Edit", "Edit", new { id = item.id, @style = "color:black" })
                        </button>
                        <button class="btn-outline-** btn btn-light waves-effect w-md">
                            @Html.ActionLink("Details", "Details", new { id = item.id })
                        </button>
                        <button class="btn-outline-** btn btn-light waves-effect w-md">
                            @Html.ActionLink("Delete", "Delete", new { id = item.id })
                        </button>
                    </td>
                </tr>
            }

    </table>
    </div>